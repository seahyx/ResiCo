<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ResiCo.TextAppearance.Logo1" parent="">
        <item name="android:textSize">32sp</item>
        <item name="fontWeight">600</item>
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
    <style name="ResiCo.TextAppearance.Logo2" parent="ResiCo.TextAppearance.Logo1">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ResiCo.TextAppearance.Hyperlink" parent="">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ResiCo.TextAppearance.EventDetailHeader" parent="">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:layout_marginTop">@dimen/component_medium_margin</item>
    </style>

    <style name="ResiCo.TextAppearance.EventDetailBody" parent="">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:layout_marginTop">@dimen/component_small_margin</item>
    </style>

    <style name="StandardBottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="layout_behavior">@string/bottom_sheet_behavior</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.ResiCo.LargeComponent</item>
    </style>
    
    <style name="AnnouncementCard" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.None</item>
        <item name="backgroundColor">?attr/colorSurface2</item>
    </style>

    <style name="ShapeAppearanceOverlay.ResiCo.SmallComponent" parent="">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.ResiCo.MediumComponent" parent="">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.ResiCo.LargeComponent" parent="">
        <item name="cornerSize">28dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.ResiCo.Full" parent="">
        <item name="cornerSize">50%</item>
        <item name="cornerFamily">rounded</item>
    </style>
</resources>