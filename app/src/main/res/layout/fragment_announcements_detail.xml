<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AnnouncementsDetailFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/component_large_margin">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_height="?attr/collapsingToolbarLayoutLargeSize"
        android:layout_width="wrap_content"
        android:theme="@style/AnnouncementDetailActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_bar"
            android:layout_width="wrap_content"
            android:layout_height="?attr/collapsingToolbarLayoutLargeSize"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:titleCollapseMode="fade"
            app:title="@string/placeholder_announcement_title"
            app:expandedTitleTextAppearance="@style/AnnouncementTitleStyle"
            app:extraMultilineHeightEnabled="false"
            app:expandedTitleMarginStart="@dimen/activity_horizontal_margin"
            app:expandedTitleMarginEnd="@dimen/activity_horizontal_margin"
            app:expandedTitleGravity="left"
            app:maxLines="3"
            app:expandedTitleMarginTop="?attr/actionBarSize">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/tool_bar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="wrap_content"
            android:elevation="0dp"
            app:layout_collapseMode="pin"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:paddingBottom="62dp"
        android:clipToPadding="false"
        android:paddingHorizontal="@dimen/activity_horizontal_margin"
        android:background="?attr/colorSurface2"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/announcements_detail_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textFontWeight="300"
                android:textSize="@dimen/text_small"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:text="@string/placeholder_announcement_date"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="@dimen/component_small_margin"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/announcements_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/long_text"
                android:textSize="@dimen/text_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/announcements_detail_date"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>